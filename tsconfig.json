{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false
  },

  "include": [
    "src/**/*.ts",
    "features/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
